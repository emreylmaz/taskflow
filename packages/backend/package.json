{
  "name": "@taskflow/backend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "lint": "eslint",
    "type-check": "tsc --noEmit",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@taskflow/shared": "*",
    "@prisma/client": "^6.9.0",
    "bcrypt": "^6.0.0",
    "compression": "^1.8.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "pino": "^10.3.0",
    "pino-http": "^11.0.0",
    "zod": "^3.25.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.15.0",
    "@types/pino-http": "^5.8.4",
    "@types/supertest": "^6.0.3",
    "eslint": "^9.25.0",
    "globals": "^16.0.0",
    "pino-pretty": "^13.1.3",
    "prisma": "^6.9.0",
    "supertest": "^7.2.2",
    "tsx": "^4.19.0",
    "typescript": "~5.8.0",
    "typescript-eslint": "^8.30.0",
    "vitest": "^4.0.18"
  }
